{
  "testEnvironment": "node",
  "setupFiles": ["<rootDir>/tests/setup.js"],
  "collectCoverageFrom": [
    "src/**/*.js",
    "!src/config/**",
    "!src/seeders/**"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 70,
      "functions": 70,
      "lines": 70,
      "statements": 70
    }
  },
  "testMatch": [
    "**/tests/**/*.test.js"
  ]
}